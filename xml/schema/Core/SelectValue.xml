<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Core</base>
  <class>SelectValue</class>
  <name>civicrm_select_value</name>
  <add>1.5</add>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Select value ID</comment>
       <add>1.5</add>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
      <name>domain_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Which domain owns this set of select value options.</comment>
       <add>1.5</add>
  </field>
  <foreignKey>
       <name>domain_id</name>
       <table>civicrm_domain</table>
       <key>id</key>
       <add>1.5</add>
  </foreignKey>
  <field>
       <name>name</name>
       <title>Selection Set Name</title>
       <type>varchar</type>
       <length>64</length>
       <required>true</required>
       <comment>Selection set name. Used as selection key by class properties which lookup options in civicrm_select_value_option.</comment>
       <add>1.5</add>
  </field>
  <field>
       <name>description</name>
       <type>varchar</type>
       <length>255</length>
       <comment>Section set description.</comment>
       <add>1.5</add>
  </field>
  <field>
       <name>is_reserved</name>
       <type>boolean</type>
       <comment>Is this a predefined system selection set (i.e. it can not be deleted)?</comment>
       <add>1.5</add>
  </field>
  <field>
       <name>is_active</name>
       <type>boolean</type>
       <comment>Is this selection set active?</comment>
       <add>1.5</add>
  </field>
  <index>
    <name>select_value_name_domain_id</name>
    <fieldName>name</fieldName>
    <fieldName>domain_id</fieldName>
    <unique>true</unique>
   <add>1.5</add>
  </index>
</table>
