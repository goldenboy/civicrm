<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Contact</base>
  <class>RelationshipTypeNesting</class>
  <name>civicrm_relationship_type_nesting</name>
  <comment>Provide parent-child relationships for relationship types</comment>
  <add>2.3.multiorg</add>
  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Database Relationship ID</comment>
    <add>2.3.multiorg</add>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
    <name>child_relationship_type_id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>ID of the child relationship type</comment>
    <add>2.3.multiorg</add>
  </field>
  <foreignKey>
    <name>child_relationship_type_id</name>
    <table>civicrm_relationship_type</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
    <add>2.3.multiorg</add>
  </foreignKey>
  <field>
    <name>parent_relationship_type_id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>ID of the parent relationship type</comment>
    <add>2.3.multiorg</add>
  </field>
  <foreignKey>
    <name>parent_relationship_type_id</name>
    <table>civicrm_relationship_type</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
    <add>2.3.multiorg</add>
  </foreignKey>
</table>
